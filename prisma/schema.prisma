generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  name String @unique
  price Int @default(999)
  createdAt DateTime @default(now())
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String
  stock Int @default(0)
}

model Category {
  id String @id @default(uuid())
  name String @unique
  products Product[]
}